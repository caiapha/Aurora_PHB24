  <!-- BREATH WEAPON (2024) -->
  <element name="Breath Weapon" type="Racial Trait" source="Player's Handbook (2024)" id="ID_RACIAL_TRAIT_DRAGONBORN_2024_BREATH_WEAPON">
    <description>
      <p>When you take the Attack action, you can replace one of your attacks with a Breath. DC = 8 + Con mod + PB. Damage: 1d10 (2d10 at 5th, 3d10 at 11th, 4d10 at 17th), half on a success. Uses = PB per Long Rest.</p>
    </description>
    <sheet display="false" />
    <rules>
      <stat name="Breath_Weapon_CD" value="8" />
      <stat name="Breath_Weapon_CD" value="constitution:modifier" />
      <stat name="Breath_Weapon_CD" value="proficiency" />
      <stat name="Breath_Weapon_dice" value="1" />
      <stat name="Breath_Weapon_dice" value="1" level="5" />
      <stat name="Breath_Weapon_dice" value="1" level="11" />
      <stat name="Breath_Weapon_dice" value="1" level="17" />
    </rules>
  </element>

