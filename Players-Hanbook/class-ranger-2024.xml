  <element name="Expertise" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_EXPERTISE">
    <description>
      <p>Choose two of your skill proficiencies with which you lack Expertise. You gain Expertise in those skills.</p>
    </description>
    <sheet display="false" />
    <rules>
      <select type="Proficiency" name="Expertise (Ranger 9)" supports="Expertise" number="2" />
    </rules>
  </element>

  <!-- Tireless -->
  <element name="Tireless" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_TIRELESS">
    <description>
      <p><strong>Action.</strong> You can give yourself Temporary Hit Points equal to 1d8 + your Wisdom modifier (minimum of 1). You can use this action a number of times equal to your Wisdom modifier (minimum of once), and you regain all expended uses when you finish a Long Rest.</p>
      <p class="indent">Whenever you finish a Short Rest, your Exhaustion level, if any, decreases by 1.</p>
    </description>
    <sheet action="Magic Action" usage="{{tireless:uses}}/Long Rest">
      <description>Gain 1d8 + {{tireless:bonus}} Temporary HP. Also, whenever you finish a Short Rest, your Exhaustion decreases by 1.</description>
    </sheet>
    <rules>
      <stat name="tireless:uses" value="1" bonus="base" />
      <stat name="tireless:uses" value="wisdom:modifier" bonus="base" />
      <stat name="tireless:bonus" value="1" bonus="base" />
      <stat name="tireless:bonus" value="wisdom:modifier" bonus="base" />
    </rules>
  </element>

  <!-- Relentless Hunter -->
  <element name="Relentless Hunter" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_RELENTLESS_HUNTER">
    <description>
      <p>Taking damage cannot break your Concentration on <em>Hunter's Mark</em>.</p>
    </description>
    <sheet>
      <description>Damage does not break your Concentration on Hunter's Mark.</description>
    </sheet>
  </element>

  <!-- Nature's Veil -->
  <element name="Nature's Veil" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_NATURES_VEIL">
    <description>
      <p><strong>Bonus Action.</strong> You magically become Invisible until the end of your next turn. You can use this feature a number of times equal to your Wisdom modifier (minimum of once), and you regain all expended uses when you finish a Long Rest.</p>
    </description>
    <sheet action="Bonus Action" usage="{{natures veil:uses}}/Long Rest">
      <description>You gain the Invisible condition until the end of your next turn.</description>
    </sheet>
    <rules>
      <stat name="natures veil:uses" value="1" bonus="base" />
      <stat name="natures veil:uses" value="wisdom:modifier" bonus="base" />
    </rules>
  </element>

  <!-- Precise Hunter -->
  <element name="Precise Hunter" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_PRECISE_HUNTER">
    <description>
      <p>You have Advantage on attack rolls against the creature currently marked by your <em>Hunter's Mark</em>.</p>
    </description>
    <sheet>
      <description>You have Advantage on attack rolls against the creature marked by your Hunter's Mark.</description>
    </sheet>
  </element>

  <!-- Feral Senses -->
  <element name="Feral Senses" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_FERAL_SENSES">
    <description>
      <p>Your connection to nature grants heightened senses: you have Blindsight with a range of 30 feet.</p>
    </description>
    <sheet display="false" />
    <rules>
      <grant type="Vision" id="ID_PHB24_VISION_BLINDSIGHT" />
      <stat name="blindsight:range" value="30" bonus="base" />
    </rules>
  </element>

  <!-- Epic Boon -->
