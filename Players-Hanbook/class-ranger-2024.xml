  <!-- Favored Enemy -->
  <element name="Favored Enemy" type="Class Feature" source="Player's Handbook (2024)" id="ID_WOTC_PHB24_CLASS_FEATURE_RANGER_FAVORED_ENEMY">
    <description>
      <p>You always have the <em>Hunter's Mark</em> spell prepared. You can cast it a number of times without expending a spell slot, and you regain all expended uses when you finish a Long Rest (see the Favored Enemy column of the Ranger table).</p>
    </description>
    <sheet action="Magic Action" usage="{{ranger:favored_enemy:freecasts}}/Long Rest">
      <description>You can casts Hunter's Mark without expending a spell slot .</description>
    </sheet>
    <rules>
      <grant type="Spell" id="ID_PHB24_SPELL_HUNTERS_MARK" prepared="true" spellcasting="Ranger" />
      <stat name="ranger:favored_enemy:freecasts" value="2" level="1" />
      <stat name="ranger:favored_enemy:freecasts" value="1" level="5" />
      <stat name="ranger:favored_enemy:freecasts" value="1" level="9" />
      <stat name="ranger:favored_enemy:freecasts" value="1" level="13" />
      <stat name="ranger:favored_enemy:freecasts" value="1" level="17" />
    </rules>
  </element>

