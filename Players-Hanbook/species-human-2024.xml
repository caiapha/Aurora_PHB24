    <author url="https://aurorabuilder.com">Aurora Builder</author>
    <update version="1.0.0">
      <file name="species-human-2024.xml" url="https://raw.githubusercontent.com/caiapha/Aurora_PHB24/refs/heads/main/Players-Hanbook/species-human-2024.xml" />
    </update>
    <author url="https://marketplace.dndbeyond.com/core-rules/3709000">Wizards of the Coast</author>
  </info>

  <!-- SPECIES -->
  <element name="Human (2024)" type="Race" source="Player's Handbook (2024)" id="ID_SPECIES_HUMAN_2024">
    <description>
      <h4>HUMAN TRAITS</h4>
      <p><span class="feature">Creature Type.</span> Humanoid</p>
      <p><span class="feature">Size.</span> Medium (about 4â€“7 feet tall) or Small (about 2â€“4 feet tall), chosen when you select this species</p>
